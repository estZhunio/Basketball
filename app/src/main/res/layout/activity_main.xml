<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="gravity"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="413dp"
            android:layout_height="58dp"
            android:background="#673AB7"
            android:text="BasketBall Score"
            android:textAlignment="center"
            android:textColor="#E8E6E6"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="414dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:text="Local"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btn1Local"
            android:layout_width="79dp"
            android:layout_height="49dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="24dp"
            android:background="#673AB7"
            android:text="+1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btn2Local"
            android:layout_width="79dp"
            android:layout_height="49dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="#EFEDED"
            android:text="+2"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn1Local" />

        <TextView
            android:id="@+id/puntosLocal"
            android:layout_width="120dp"
            android:layout_height="113dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="44dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="96sp"
            app:layout_constraintEnd_toStartOf="@+id/btn1Local"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/reiniciar"
            android:layout_width="87dp"
            android:layout_height="49dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="136dp"
            android:background="@color/white"
            app:icon="@android:drawable/ic_menu_rotate"
            app:iconGravity="start"
            app:iconSize="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnmn1Local" />

        <Button
            android:id="@+id/pasarPuntos"
            android:layout_width="86dp"
            android:layout_height="49dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="24dp"
            android:background="#F4EFEF"
            app:icon="@android:drawable/ic_menu_save"
            app:iconSize="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn2Local" />

        <TextView
            android:id="@+id/puntosVisitante"
            android:layout_width="126dp"
            android:layout_height="111dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="40dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="96sp"
            app:layout_constraintEnd_toStartOf="@+id/btn1Visitante"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/btn1Visitante"
            android:layout_width="79dp"
            android:layout_height="49dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="24dp"
            android:background="#F4F4F4"
            android:text="+1"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pasarPuntos" />

        <Button
            android:id="@+id/btn2Visitante"
            android:layout_width="79dp"
            android:layout_height="49dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="#F8F4F4"
            android:text="+2"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn1Visitante" />

        <Button
            android:id="@+id/btnmn1Visitante"
            android:layout_width="77dp"
            android:layout_height="49dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="136dp"
            android:background="#EDE8E8"
            android:text="-1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reiniciar" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="403dp"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            android:text="Visitante"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/puntosVisitante" />

        <Button
            android:id="@+id/btnmn1Local"
            android:layout_width="70dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:background="#F4F3F6"
            android:text="-1"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/puntosLocal"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="159dp"
            android:layout_height="139dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/reiniciar"
            app:layout_constraintTop_toBottomOf="@+id/puntosLocal"
            app:srcCompat="@drawable/balon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>